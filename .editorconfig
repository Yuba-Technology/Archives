# .editorconfig
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2
insert_final_newline = true

[*.css]
indent_size = 2
insert_final_newline = true

[*.html]
indent_size = 2
insert_final_newline = true

[*.py]
indent_size = 4
max_line_length = 79
insert_final_newline = true

[*.yml]
indent_size = 2
insert_final_newline = true

[*.yaml]
indent_size = 2
insert_final_newline = true
